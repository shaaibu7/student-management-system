<p><%= notice %></p>

<h1>List of all students</h1>
<%=  link_to 'Add Student', new_student_path %><br>

<table>
    <thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th colspan="3">Actions</th>
    </tr>
    </thead>
    <tbody>
        <% @students.each do |student| %>
            <tr>
                <td><%= student.first_name %></td>
                <td><%= student.last_name %></td>
                <td><%= student.email %></td>
                <td><%= link_to 'View', student %> |</td>
                <td><%= link_to 'Edit Student', edit_student_path(student) %> | </td>
                <td><%= link_to 'Delete', student_path(student), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
            </tr>
        <% end %>
    </tbody>
</table>