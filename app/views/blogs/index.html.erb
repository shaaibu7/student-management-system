    <thead>
    <tr>
        <th>Title</th>
        <th>Student</th>
        <th colspan="3">Actions</th>
    </tr>
    </thead>
    <tbody>
        <% @blogs.each do |blog| %>
            <tr>
                <td>Dummy Blog for <%= blog.student.first_name %></td>
                <td><%= blog.student.name_with_email %></td>
                <td><%= link_to 'View', student %> |</td>
